@model EscapeRoomPlanner.Data.EntityFramework.Models.Room

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Model.Name</h2>
<p>@Model.Description</p>
<hr>

<div class="col-12">
    <div class="row">
        <div class="col-3">
            Date
            <div class="input-group date" data-provide="datepicker">
                <input type="text" class="form-control">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
            <br/>
        </div>
        <div class="col-9">
            Free Hour
            <div class="card-columns">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="card">
                        <div class="card-body" style="padding: 0.25rem;">
                            <p style="text-align: center">12:00</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-12">
            <a asp-action="Index" asp-controller="Room" class="btn btn-secondary btn-sm p-2" style="width: 10rem">Back</a>
            <a asp-action="Save" asp-controller="Customer" class="btn btn-success float-right" style="width: 10rem">Next</a>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        $('.datepicker').datepicker();
    </script>
}
